<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/transparent"
    tools:context=".AndFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tviewID1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Please Enter Input:  (0 or 1)"
                android:textColor="@color/LightOrange"
                android:textSize="20sp"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="10dp">

                <EditText
                    android:id="@+id/etextID1"
                    android:layout_width="80dp"
                    android:layout_height="50dp"
                    android:cursorVisible="true"
                    android:digits="01"
                    android:inputType="number"
                    android:maxLength="1"
                    android:textAlignment="center" />

                <EditText
                    android:id="@+id/etextID2"
                    android:layout_width="80dp"
                    android:layout_height="50dp"
                    android:cursorVisible="true"
                    android:digits="01"
                    android:inputType="number"
                    android:maxLength="1"
                    android:textAlignment="center" />

                <EditText
                    android:id="@+id/etextID3"
                    android:layout_width="80dp"
                    android:layout_height="50dp"
                    android:cursorVisible="true"
                    android:digits="01"
                    android:inputType="number"
                    android:maxLength="1"
                    android:textAlignment="center" />

                <EditText
                    android:id="@+id/etextID4"
                    android:layout_width="80dp"
                    android:layout_height="50dp"
                    android:cursorVisible="true"
                    android:digits="01"
                    android:inputType="number"
                    android:maxLength="1"
                    android:textAlignment="center" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="10dp">

                <EditText
                    android:id="@+id/etextID5"
                    android:layout_width="80dp"
                    android:layout_height="50dp"
                    android:cursorVisible="true"
                    android:digits="01"
                    android:inputType="number"
                    android:maxLength="1"
                    android:textAlignment="center" />

                <EditText
                    android:id="@+id/etextID6"
                    android:layout_width="80dp"
                    android:layout_height="50dp"
                    android:cursorVisible="true"
                    android:digits="01"
                    android:inputType="number"
                    android:maxLength="1"
                    android:textAlignment="center" />

                <EditText
                    android:id="@+id/etextID7"
                    android:layout_width="80dp"
                    android:layout_height="50dp"
                    android:cursorVisible="true"
                    android:digits="01"
                    android:inputType="number"
                    android:maxLength="1"
                    android:textAlignment="center"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/etextID8"
                    android:layout_width="80dp"
                    android:layout_height="50dp"
                    android:cursorVisible="true"
                    android:digits="01"
                    android:inputType="number"
                    android:maxLength="1"
                    android:textAlignment="center" />
            </LinearLayout>

            <Button
                android:id="@+id/resultID1"
                android:layout_width="110dp"
                android:layout_height="50dp"
                android:layout_margin="25dp"
                android:text="Done"
                android:background="@drawable/buttonshape_normal"
                android:textSize="20sp"
                android:textStyle="bold"/>

            <Button
                android:id="@+id/detailsbuttonID"
                android:layout_width="222dp"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:gravity="center"
                android:padding="5dp"
                android:text="@string/details_name"
                android:textSize="20sp"
                android:textStyle="bold"
                android:background="@drawable/buttonshape01"/>

        </LinearLayout>


    </LinearLayout>


</LinearLayout>