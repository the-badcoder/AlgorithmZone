<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDarkTransparent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="50dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Please Enter Inputs: (0-99)"
            android:textSize="25sp"
            android:gravity="center"
            android:textColor="@color/LightOrange" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:paddingTop="25dp">

        <EditText
            android:id="@+id/etextID1"
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:cursorVisible="true"
            android:inputType="number"
            android:maxLength="2"
            android:textAlignment="center"
            android:imeOptions="actionNext"/>

        <EditText
            android:id="@+id/etextID2"
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:cursorVisible="true"
            android:inputType="number"
            android:maxLength="2"
            android:textAlignment="center"
            android:imeOptions="actionNext"/>

        <EditText
            android:id="@+id/etextID3"
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:cursorVisible="true"
            android:inputType="number"
            android:maxLength="2"
            android:textAlignment="center"
            android:imeOptions="actionNext"/>

        <EditText
            android:id="@+id/etextID4"
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:cursorVisible="true"
            android:inputType="number"
            android:maxLength="2"
            android:textAlignment="center"
            android:imeOptions="actionNext"/>

        <EditText
            android:id="@+id/etextID5"
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:cursorVisible="true"
            android:inputType="number"
            android:maxLength="2"
            android:textAlignment="center"
            android:imeOptions="actionNext"/>

        <EditText
            android:id="@+id/etextID6"
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:cursorVisible="true"
            android:inputType="number"
            android:maxLength="2"
            android:textAlignment="center"
            android:imeOptions="actionNext"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <Button
            android:id="@+id/CheckID"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            android:text="DONE"
            android:background="@drawable/buttonshape_normal"
            android:textSize="20sp"
            android:textStyle="bold"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutID"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="25dp"
        android:orientation="vertical"
        android:visibility="gone">

        <Button
            android:id="@+id/bubbleSortID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:background="@drawable/buttonshape01"
            android:shadowColor="#A8A8A8"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="5"
            android:text="Bubble Sort"
            android:textColor="#FFFFFF"
            android:textSize="30sp" />

        <Button
            android:id="@+id/insertionSortID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:background="@drawable/buttonshape01"
            android:shadowColor="#A8A8A8"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="5"
            android:text="Insertion Sort"
            android:textColor="#FFFFFF"
            android:textSize="30sp" />

        <Button
            android:id="@+id/selectionSortID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:background="@drawable/buttonshape01"
            android:shadowColor="#A8A8A8"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="5"
            android:text="SELECTION SORT"
            android:textColor="#FFFFFF"
            android:textSize="30sp" />


    </LinearLayout>

</LinearLayout>